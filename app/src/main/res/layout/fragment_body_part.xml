<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".filter.BodyPartFragment"
    android:orientation="vertical">
    <TextView
        android:id="@+id/focus_title_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_focus_area"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/focus_title_holder">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp"
            android:layout_gravity="center"
            android:id="@+id/focus_area_list"
            android:layout_margin="10dp"/>
        <ImageView
            android:layout_width= "match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/dummy_bodypart"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/move_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:textSize="20sp"
        android:background="@drawable/button_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"/>
</RelativeLayout>