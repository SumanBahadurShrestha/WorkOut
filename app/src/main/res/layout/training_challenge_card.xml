<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/button_background"
                android:id="@+id/img_chall_Background"
                android:contentDescription="@string/image" />
            <TextView
                android:id="@+id/tv_chall_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fully Body"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_chall_Title"
                android:text="7x4 Challenge"
                android:textSize="16sp"
                android:textAllCaps="true"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginStart="10dp"/>

            <ProgressBar
                android:id="@+id/progressBarH"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/progressBarH"
                android:orientation="horizontal"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <TextView
                    android:id="@+id/tv_days_remain"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="28 days left"
                    android:textSize="12sp"
                    android:gravity="start"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/tv_per_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>